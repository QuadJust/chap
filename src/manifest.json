{
  "manifest_version": 2,
  "name": "Chap",
  "description": "LINE stamp addon for ChatLuck.",
  "version": "1.0",
  "icons": {
    "16": "icons/LINE_icon_Green.png",
    "128": "icons/LINE_icon_Green.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/LINE_icon_Green.png",
      "128": "icons/LINE_icon_Green.png"
    },
    "default_title": "Chap",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.chatluck.com/cgi-bin/chatlk/chat.cgi"
      ],
      "js": ["js/content_script.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*",
    "storage",
    "webNavigation"
  ]
}